include "m8c.inc"


;--------------------------------------------------
; Constants for BaudClock API's.
;--------------------------------------------------

BaudClock_CONTROL_REG_START_BIT:           equ 0x01    ; Control register start bit
BaudClock_INT_REG:                         equ 0x0e1
BaudClock_INT_MASK:                        equ 0x01


;--------------------------------------------------
; Constants for BaudClock user defined values
;--------------------------------------------------

BaudClock_PERIOD:                          equ 0x33
BaudClock_PULSE_WIDTH:                     equ 0x19


;--------------------------------------------------
; Register Address Constants for BaudClock
;--------------------------------------------------

BaudClock_COUNTER_REG:                 equ 0x20   ; DR0 Count register
BaudClock_PERIOD_REG:                  equ 0x21   ; DR1 Period register
BaudClock_COMPARE_REG:                 equ 0x22   ; DR2 Compare register
BaudClock_CONTROL_REG:                 equ 0x23   ; Control register
BaudClock_FUNC_REG:                    equ 0x20   ; Function register
BaudClock_INPUT_REG:                   equ 0x21   ; Input register
BaudClock_OUTPUT_REG:                  equ 0x22   ; Output register


;--------------------------------------------------
; BaudClock Macro 'Functions'
;--------------------------------------------------

   macro BaudClock_Start_M
   or    reg[BaudClock_CONTROL_REG],  BaudClock_CONTROL_REG_START_BIT
   endm

   macro BaudClock_Stop_M
   and   reg[BaudClock_CONTROL_REG], ~BaudClock_CONTROL_REG_START_BIT
   endm

   macro BaudClock_EnableInt_M
   M8C_EnableIntMask BaudClock_INT_REG, BaudClock_INT_MASK
   endm

   macro BaudClock_DisableInt_M
   M8C_DisableIntMask BaudClock_INT_REG, BaudClock_INT_MASK
   endm


